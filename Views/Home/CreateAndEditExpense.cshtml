@{
    ViewData["Title"] = "Create/Edit Expenses";
}


@model Expense_tracker.Models.Expense


<div class="text-center">
    <h1 class="display-4">Create and Edit Expenses</h1>
</div>

<form asp-action="RedirectEdit" asp-controller="Home">
    <input hidden type="number" class="form-control" placeholder="0" asp-for="Id"/>

    <label class="mt-4">Value $</label>
    <input type="number" class="form-control" placeholder="0" asp-for="Value" step="0.01"/>

    <label class="mt-4">Description</label>
    <input type="text" class="form-control" placeholder="Add a Description" asp-for="Description" />

    <button type="submit" class="btn btn-primary mt-4">OK</button>
</form>